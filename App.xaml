<Application
    x:Class="orange_thallium.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:orange_thallium">
    <Application.Resources>
      <ResourceDictionary>
        <AcrylicBrush x:Key="HostBackground" BackgroundSource="HostBackdrop" Opacity="0.5" TintColor="{StaticResource SystemColorBackgroundColor}" TintOpacity="0.6" FallbackColor="{StaticResource SystemColorBackgroundColor}"/>
      </ResourceDictionary>
    </Application.Resources>
</Application>
